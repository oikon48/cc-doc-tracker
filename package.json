{
  "name": "cc-doc-tracker",
  "version": "1.0.0",
  "description": "Automatically fetch and track Claude Code documentation changes using Git-based scraping. Pure Markdown storage without HTML processing.",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "ccdocs": "dist/cli.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc && chmod +x dist/cli.js",
    "start": "node dist/index.js",
    "fetch-docs": "tsx src/fetch-docs.ts",
    "cli": "tsx src/cli.ts",
    "test": "echo \"Test placeholder - to be implemented\"",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "claude-code",
    "claude",
    "anthropic",
    "documentation",
    "doc-tracker",
    "scraper",
    "markdown",
    "git-scraping",
    "automation",
    "typescript",
    "github-actions",
    "change-tracking"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.6.2",
    "dotenv": "^16.3.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/cc-doc-tracker.git"
  }
}
